<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %(%d{yyyy-MM-dd HH:mm:ss.SSS}) - %magenta(%-5level ) %yellow([%15.15thread]) %cyan(%-40.40logger{39}) : %m%n
            </pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>